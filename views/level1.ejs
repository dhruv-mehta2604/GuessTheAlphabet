<html>

<head>
    <title>Level1</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<% arr=helper.genTableOne()%>
    <%var ques=helper.genQuesFromTable(arr);%>

        <body>
            <h1>Level1</h1>
            <h2>
                <%=ques%>
            </h2>
            <h3>no of tries =
                <span id="noOfTries"><%=loner%></span>
            </h3>
            <h4 id="gameOver"></h4>
            <table class="table table-bordered">
                <tbody>
                    <%for (let i = 0; i < 2; i++) {%>
                        <tr>
                            <%for (let j = 0; j < 3; j++) {%>
                                <td>
                                    <%=arr[i][j]%>
                                </td>
                                <%}%>
                        </tr>
                        <%}%>
                </tbody>
            </table>
            <script>
                loner = 0;
                var ques = "<%=ques%>";
                const tbody = document.querySelector('tbody');
                const span = document.querySelector('#noOfTries');
                const gameOver = document.querySelector('#gameOver');
                tbody.addEventListener('click', function(e) {
                    const cell = e.target.closest('td');
                    if (!cell) {
                        return;
                    } // Quit, not clicked on a cell
                    const row = cell.parentElement;
                    loner += 1;
                    if (cell.innerText == ques[27]) {
                        cell.style.backgroundColor = "green";
                        if (loner == 1) {
                            gameOver.innerHTML = 'you can proceed to <a href="/level2">next level</a>';

                        } else {
                            gameOver.innerHTML = 'You have to retry <a href="/level1">this level</a>';
                        }
                    } else {
                        cell.style.backgroundColor = "red";
                    }
                    console.log(loner);
                    span.innerText = loner;
                    console.log(cell.innerHTML, row.rowIndex, cell.cellIndex);
                });
            </script>
        </body>

</html>